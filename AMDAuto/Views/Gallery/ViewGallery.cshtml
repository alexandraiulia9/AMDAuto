@model GalleryVM

@section style{
    <link href="~/css/Gallery.css" rel="stylesheet" />
    @*<link href="~/css/lightbox.css" rel="stylesheet" />*@
}

<h3>Faceți un tur virtual al altelierului nostru!</h3>

<div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
    <div class="carousel-inner">
        @for (var i = 0; i < Model.Photos.Count; i++)
        {
            if (i == 0)
            {
                <div class="carousel-item active imgsCarousel">
                    <img src="/Gallery/GetPhotoById?id=@Model.Photos[i].Id" class="d-block" albumPhoto Photo data-photo-id="@Model.Photos[i].Id" />
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="/Gallery/GetPhotoById?id=@Model.Photos[i].Id" class="d-block" albumPhoto Photo data-photo-id="@Model.Photos[i].Id" />
                </div>
            }

        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


@section scripts{

    <script src="~/js/lightbox.js"></script>
}