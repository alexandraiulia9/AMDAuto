@model CarPartVm

@section style{

}

<form asp-action="AddCarParts">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-md-12">
            <h3 style="position: relative; margin-top:2%; left:7%; margin-bottom: 3%;">Adăugați o piesă nouă</h3>
        </div>

        <div class="col-md-12">
            <div class="row ">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h6>Selectați categoria</h6>
                    </div>
                    <div class="col-md-4">
                        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                            <option value="select" selected disabled hidden>Select</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>


            </div>
            <div class="row " style="margin-top: 20px;">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h6>Selectați operația</h6>
                    </div>
                    <div class="col-md-4">
                        <select asp-for="OperationId" asp-items="Model.Operations" class="form-control" id="OperationsDropDown">
                            <option value="select" selected disabled hidden>Select</option>
                        </select>
                        <span asp-validation-for="OperationId" class="text-danger"></span>
                    </div>
                </div>


            </div>
        </div>

        <div class="col-md-12" style="margin-top: 3%;">
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-5">
                        <h6>Denumire piesă</h6>
                    </div>
                    <div class="col-md-9">
                        <input type="text" value="" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-5">
                        <h6>Preț</h6>
                    </div>
                    <div class="col-md-9">
                        <input type="text" value="" asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6" style="margin-top: 3%;">
                    <div class="col-md-5">
                        <h6>Cantitate</h6>
                    </div>
                    <div class="col-md-9">
                        <input type="text" value="" asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>

            </div>

        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-success" style="margin-left: 2%;">Adaugă</button>
        </div>

    </div>
</form>
<script src="~/js/AddCarPart.js"></script>