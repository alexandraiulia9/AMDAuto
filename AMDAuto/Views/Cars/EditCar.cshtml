@model AMDAuto.Models.CarVm


@section style{
    <link href="~/css/AddCar.css" rel="stylesheet" />
}

<h3>@ViewData["Message"]</h3>


<form asp-action="EditCar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="UserId" class="form-control" value="@Model.UserId" hidden />
    <input asp-for="Id" class="form-control" value="@Model.Id" hidden />
    <div class="row rightAlign">

        <div class="form-group col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="MakeNameId" class="control-label">Marca</label>
                </div>
                <div class="col-md-9">
                    <select asp-for="MakeNameId" asp-items="Model.Makes" class="form-control">
                        <option value="select" selected disabled hidden>Select</option>
                    </select>
                    <span asp-validation-for="MakeNameId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="ModelId" class="control-label">Model</label>
                </div>
                <div class="col-md-9">
                    <select asp-for="ModelId" asp-items="Model.Models" class="form-control" id="ModelDropDown">
                        <option value="select" selected disabled hidden>Select</option>
                    </select>
                    <span asp-validation-for="ModelId" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="form-group col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="ReleaseYear" class="control-label">Anul fabricatiei</label>
                </div>
                <div class="col-md-9">
                    <input asp-for="ReleaseYear" class="form-control" />
                    <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="form-group col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="LicenseNumber" class="control-label">Numar de inmatriculare</label>
                </div>
                <div class="col-md-9">
                    <input asp-for="LicenseNumber" class="form-control" />
                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>

    <div class="form-group addButton">
        <input type="submit" value="Salvează" class="btn btnAddCar" />
    </div>

</form>

@section Scripts{
    <script src="~/js/Car.js"></script>
}

